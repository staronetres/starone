<div class="album py-5 bg-light">
        <div class="container">

          <div class="row">

            <% @products.each do |product| %>
            <div class="col-md-4">

               <% if product.sale.present? %>
        <div class="tag sale">
          
          <%= product.sale %>

        </div>

          <% end %>
              <div class="card mb-4 box-shadow">
                 <%= link_to image_tag(product.image.url, class: 'card-img-top img-fluid') %>
                <div class="card-body">
                  <p class="card-text"><%= product.title %></p>
                  <p class="card-text"><%= number_to_currency product.price %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= button_to product_items_path(product_id: product), class: 'btn btn-primary' do %>
<i class="fa fa-shopping-cart"></i> Add to cart
<% end %>
                    </div>
                   
                   
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>